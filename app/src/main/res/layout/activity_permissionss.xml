<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grayth"
    android:fitsSystemWindows="true">

    <include
        android:id="@+id/top"
        layout="@layout/include_toptitlet_black"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/fortyf"
        android:layout_alignParentTop="true" />


        <GridView
            android:id="@+id/home_gv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/top"
            android:layout_margin="@dimen/five"
            android:background="@drawable/bg_color_white"
            android:numColumns="3"
            android:scrollbars="none" />


    <Button
        android:id="@+id/logout_btn"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/forty"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/fifity"
        android:layout_marginRight="@dimen/fifity"
        android:layout_marginBottom="@dimen/thirty"
        android:background="@drawable/green_background"
        android:text="保存"
        android:textColor="@color/white"
        android:textSize="@dimen/text_thirteen" />
</RelativeLayout>