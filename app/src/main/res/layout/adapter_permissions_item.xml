<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/eighty"
    android:background="@drawable/login_background_image"
    android:padding="@dimen/five">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/five"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/text_thirteen" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/five"
            android:layout_marginTop="@dimen/five"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="账号:"
                android:textColor="@color/blacko"
                android:textSize="@dimen/text_thirteen" />

            <TextView
                android:id="@+id/num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/five"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/greens"
                android:textSize="@dimen/text_thirteen" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/five"
            android:layout_marginTop="@dimen/five"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="当前身份:"
                android:textColor="@color/blacko"
                android:textSize="@dimen/text_thirteen" />

            <TextView
                android:id="@+id/status_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/five"
                android:gravity="center_vertical"
                android:text=" "
                android:textColor="@color/blacko"
                android:textSize="@dimen/text_thirteen" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/status_bt"
        android:layout_width="@dimen/seventy"
        android:layout_height="@dimen/thirty"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginRight="@dimen/fifteen"
        android:background="@drawable/btn_select"
        android:text="分配权限"
        android:textColor="@color/white"
        android:textSize="@dimen/text_thirteen" />
</RelativeLayout>
