<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="285dp"
            android:layout_height="360dp"
            android:layout_centerInParent="true"
            android:background="@drawable/login_background"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/eighty"
                android:background="@drawable/login_img"
                android:gravity="center"
                android:text="翼禄服务"
                android:textColor="@color/white"
                android:textSize="@dimen/twentyf" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ten"
                android:layout_marginTop="@dimen/ten"
                android:layout_marginRight="@dimen/ten"
                android:layout_marginBottom="@dimen/ten"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <com.eroadcar.networkmanagement.view.ClearEditText
                    android:id="@+id/shopcode_cet"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/forty"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="@dimen/ten"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="@dimen/ten"
                    android:background="@color/white"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:hint="请输入门店代码"
                    android:inputType="number"
                    android:maxLength="11"
                    android:paddingLeft="@dimen/thirty"
                    android:paddingRight="@dimen/ten"
                    android:singleLine="true"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grayz"
                    android:textSize="@dimen/text_thirteen" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/text_twelve"
                    android:src="@mipmap/icon_store" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_below="@id/shopcode_cet"
                    android:layout_marginLeft="@dimen/text_twelve"
                    android:layout_marginRight="@dimen/text_twelve"
                    android:background="@color/graya" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ten"
                android:layout_marginRight="@dimen/ten"
                android:layout_marginBottom="@dimen/ten"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <com.eroadcar.networkmanagement.view.ClearEditText
                    android:id="@+id/mobile_cet"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/forty"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="@dimen/ten"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="@dimen/ten"
                    android:background="@color/white"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:hint="请输入账号"
                    android:inputType="number"
                    android:maxLength="11"
                    android:paddingLeft="@dimen/thirty"
                    android:paddingRight="@dimen/ten"
                    android:singleLine="true"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grayz"
                    android:textSize="@dimen/text_thirteen" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/text_twelve"
                    android:src="@mipmap/icon_person" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_below="@id/mobile_cet"
                    android:layout_marginLeft="@dimen/text_twelve"
                    android:layout_marginRight="@dimen/text_twelve"
                    android:background="@color/graya" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ten"
                android:layout_marginRight="@dimen/ten"
                android:layout_marginBottom="@dimen/ten"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <com.eroadcar.networkmanagement.view.ClearEditText
                    android:id="@+id/pwd_cet"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/forty"
                    android:layout_marginLeft="@dimen/ten"
                    android:layout_marginRight="@dimen/ten"
                    android:background="@color/white"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:hint="请输入密码"
                    android:inputType="textPassword"
                    android:maxLength="20"
                    android:paddingLeft="@dimen/thirty"
                    android:paddingRight="@dimen/ten"
                    android:singleLine="true"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grayz"
                    android:textSize="@dimen/text_thirteen" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/text_twelve"
                    android:src="@mipmap/icon_password" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_below="@id/pwd_cet"
                    android:layout_marginLeft="@dimen/text_twelve"
                    android:layout_marginRight="@dimen/text_twelve"
                    android:background="@color/graya" />

            </RelativeLayout>

            <Button
                android:id="@+id/login_btn"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/forty"
                android:layout_marginLeft="@dimen/twenty"
                android:layout_marginTop="@dimen/twentyf"
                android:layout_marginRight="@dimen/twenty"
                android:background="@drawable/btn_select"
                android:enabled="false"
                android:text="登录"
                android:textColor="@color/white"
                android:textSize="@dimen/text_thirteen" />


            <RelativeLayout
                android:id="@+id/pwd_ll"
                android:layout_width="match_parent"
                android:layout_height="@dimen/twenty"
                android:layout_marginLeft="@dimen/twenty"
                android:layout_marginTop="@dimen/twenty"
                android:layout_marginRight="@dimen/twenty">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/remember_cb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/five"
                        android:gravity="center"
                        android:text="记住密码"
                        android:textColor="@color/green"
                        android:textSize="@dimen/text_eleven" />
                </LinearLayout>

                <TextView
                    android:id="@+id/forget_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:autoLink="all"
                    android:gravity="center"
                    android:text="忘记密码"
                    android:textColor="@color/green"
                    android:textSize="@dimen/text_eleven" />
            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</FrameLayout>
