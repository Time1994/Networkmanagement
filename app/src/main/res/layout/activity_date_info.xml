<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grayth"
    android:fitsSystemWindows="true">

    <include
        android:id="@+id/top"
        layout="@layout/include_toptitlet_black"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/fortyf" />

    <LinearLayout
        android:id="@+id/first_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/hundreds"
        android:layout_below="@id/top"
        android:layout_margin="@dimen/five"
        android:layout_marginLeft="@dimen/five"
        android:layout_marginRight="@dimen/five"
        android:background="@drawable/login_background_image"
        android:orientation="vertical"
        android:weightSum="4">

        <LinearLayout
            android:id="@+id/num_ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/forty"
            android:layout_weight="1"
            android:background="@drawable/login_background_image"
            android:orientation="horizontal"
            android:padding="@dimen/ten">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingRight="@dimen/ten"
                android:src="@mipmap/icon_num" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/fifteen"
                android:gravity="center_vertical"
                android:text="账号"
                android:textColor="@color/black"
                android:textSize="@dimen/text_fourteen" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/num_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/ten"
                    android:text="123456"
                    android:textColor="@color/blacko"
                    android:textSize="@dimen/fifteen" />
            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/pwd_cet"
            android:layout_marginLeft="@dimen/five"
            android:layout_marginRight="@dimen/five"
            android:background="@color/gray" />

        <LinearLayout
            android:id="@+id/name_ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/forty"
            android:layout_weight="1"
            android:background="@drawable/login_background_image"
            android:orientation="horizontal"
            android:padding="@dimen/ten">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingRight="@dimen/ten"
                android:src="@mipmap/icon_name" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/fifteen"
                android:gravity="center_vertical"
                android:text="姓名"
                android:textColor="@color/black"
                android:textSize="@dimen/text_fourteen" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/ten"
                    android:layout_toLeftOf="@+id/input_iv"
                    android:gravity="center_vertical"
                    android:text="张无忌"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_fourteen" />

                <ImageView
                    android:id="@+id/input_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/five"
                    android:src="@mipmap/icon_inright" />
            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/pwd_cet"
            android:layout_marginLeft="@dimen/five"
            android:layout_marginRight="@dimen/five"
            android:background="@color/gray" />

        <LinearLayout
            android:id="@+id/phone_ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/forty"
            android:layout_weight="1"
            android:background="@drawable/login_background_image"
            android:orientation="horizontal"
            android:padding="@dimen/ten">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingRight="@dimen/ten"
                android:src="@mipmap/icon_phone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/fifteen"
                android:gravity="center_vertical"
                android:text="手机号"
                android:textColor="@color/black"
                android:textSize="@dimen/text_fourteen" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/phone_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/ten"
                    android:layout_toLeftOf="@+id/inputo_iv"
                    android:gravity="center_vertical"
                    android:text="17721377871"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_fourteen" />

                <ImageView
                    android:id="@+id/inputo_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/five"
                    android:src="@mipmap/icon_inright" />
            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/pwd_cet"
            android:layout_marginLeft="@dimen/five"
            android:layout_marginRight="@dimen/five"
            android:background="@color/gray" />

        <LinearLayout
            android:id="@+id/pwd_ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/forty"
            android:layout_weight="1"
            android:background="@drawable/login_background_image"
            android:orientation="horizontal"
            android:padding="@dimen/ten">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingRight="@dimen/ten"
                android:src="@mipmap/icon_changepwd" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/fifteen"
                android:gravity="center_vertical"
                android:text="修改密码"
                android:textColor="@color/black"
                android:textSize="@dimen/text_fourteen" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/five"
                    android:src="@mipmap/icon_inright" />
            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/pwd_cet"
            android:layout_marginLeft="@dimen/five"
            android:layout_marginRight="@dimen/five"
            android:background="@color/gray" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/eighty"
        android:layout_below="@id/first_ll"
        android:layout_marginLeft="@dimen/five"
        android:layout_marginRight="@dimen/five"
        android:background="@drawable/login_background_image"
        android:orientation="vertical"
        android:weightSum="2">

        <LinearLayout
            android:id="@+id/store_ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/forty"
            android:layout_weight="1"
            android:background="@drawable/login_background_image"
            android:orientation="horizontal"
            android:padding="@dimen/ten">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingRight="@dimen/ten"
                android:src="@mipmap/icon_storer" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/fifteen"
                android:gravity="center_vertical"
                android:text="所属门店"
                android:textColor="@color/black"
                android:textSize="@dimen/text_fourteen" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/store_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/ten"
                    android:text="英枫店"
                    android:textColor="@color/blacko"
                    android:textSize="@dimen/fifteen" />
            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/pwd_cet"
            android:layout_marginLeft="@dimen/five"
            android:layout_marginRight="@dimen/five"
            android:background="@color/gray" />

        <LinearLayout
            android:id="@+id/power_ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/forty"
            android:layout_weight="1"
            android:background="@drawable/login_background_image"
            android:orientation="horizontal"
            android:padding="@dimen/ten">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingRight="@dimen/ten"
                android:src="@mipmap/icon_status" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/fifteen"
                android:gravity="center_vertical"
                android:text="身份"
                android:textColor="@color/black"
                android:textSize="@dimen/text_fourteen" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/status_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/ten"
                    android:text="销售经理"
                    android:textColor="@color/blacko"
                    android:textSize="@dimen/fifteen" />
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>