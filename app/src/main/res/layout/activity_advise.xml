<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grayth"
    android:fitsSystemWindows="true">

    <include
        android:id="@+id/top"
        layout="@layout/include_toptitlet_black"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/fortyf"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top"
        android:layout_marginLeft="@dimen/five"
        android:layout_marginTop="@dimen/five"
        android:layout_marginRight="@dimen/five"
        android:background="@drawable/login_background_image"
        android:orientation="vertical">

        <EditText
            android:id="@+id/pingjia_et"
            android:layout_width="match_parent"
            android:layout_height="@dimen/hundreds"
            android:layout_margin="@dimen/ten"
            android:background="@drawable/graye_background_image"
            android:gravity="top"
            android:hint="请留下您的宝贵意见...."
            android:maxLength="200"
            android:minLines="6"
            android:padding="@dimen/five"
            android:textColor="@color/black"
            android:textColorHint="@color/blacko"
            android:textSize="@dimen/text_twelve" />
    </LinearLayout>

    <Button
        android:id="@+id/sure_btn"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/forty"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/thirty"
        android:layout_marginRight="@dimen/thirty"
        android:layout_marginBottom="@dimen/fifity"
        android:background="@drawable/btn_select"
        android:enabled="false"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="@dimen/text_thirteen" />


</RelativeLayout>