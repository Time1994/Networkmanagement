<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grayth"
    android:fitsSystemWindows="true">

    <include
        android:id="@+id/top"
        layout="@layout/include_toptitlet_black"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/fortyf" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top"
        android:layout_marginLeft="@dimen/five"
        android:layout_marginTop="3dp"
        android:layout_marginRight="@dimen/five"
        android:background="@drawable/login_background_image"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/thirty"
            android:layout_marginTop="@dimen/thirty"
            android:layout_marginRight="@dimen/thirty"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <com.eroadcar.networkmanagement.view.ClearEditText
                android:id="@+id/phone_cet"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/fortyf"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/ten"
                android:layout_marginRight="@dimen/ten"
                android:background="@color/white"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:hint="请输入手机号码"
                android:inputType="number"
                android:maxLength="11"
                android:paddingLeft="@dimen/thirty"
                android:paddingRight="@dimen/ten"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/black"
                android:textColorHint="@color/grayz"
                android:textSize="@dimen/text_thirteen" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/text_twelve"
                android:src="@mipmap/icon_phone" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@id/phone_cet"
                android:layout_marginLeft="@dimen/text_twelve"
                android:layout_marginRight="@dimen/text_twelve"
                android:background="@color/gray" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/thirty"
            android:layout_marginRight="@dimen/thirty"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <com.eroadcar.networkmanagement.view.ClearEditText
                android:id="@+id/pwd_cet"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/fortyf"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/ten"
                android:layout_marginRight="@dimen/ten"
                android:background="@color/white"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:hint="请输入至少6位密码"
                android:inputType="textPassword"
                android:maxLength="16"
                android:paddingLeft="@dimen/thirty"
                android:paddingRight="@dimen/ten"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/black"
                android:textColorHint="@color/grayz"
                android:textSize="@dimen/text_thirteen" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/text_twelve"
                android:src="@mipmap/icon_changepwd" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@id/pwd_cet"
                android:layout_marginLeft="@dimen/text_twelve"
                android:layout_marginRight="@dimen/text_twelve"
                android:background="@color/gray" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/thirty"
            android:layout_marginRight="@dimen/thirty"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <com.eroadcar.networkmanagement.view.ClearEditText
                android:id="@+id/pwdt_cet"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/fortyf"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/ten"
                android:layout_marginRight="@dimen/ten"
                android:background="@color/white"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:hint="请再次确认密码"
                android:inputType="textPassword"
                android:maxLength="16"
                android:paddingLeft="@dimen/thirty"
                android:paddingRight="@dimen/ten"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/black"
                android:textColorHint="@color/grayz"
                android:textSize="@dimen/text_thirteen" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/text_twelve"
                android:src="@mipmap/icon_changepwd" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@id/pwdt_cet"
                android:layout_marginLeft="@dimen/text_twelve"
                android:layout_marginRight="@dimen/text_twelve"
                android:background="@color/gray" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/thirty"
            android:layout_marginRight="@dimen/thirty"
            android:orientation="horizontal"
            android:weightSum="6">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <com.eroadcar.networkmanagement.view.ClearEditText
                    android:id="@+id/code_cet"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/fortyf"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="@dimen/ten"
                    android:layout_marginRight="@dimen/ten"
                    android:background="@color/white"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:hint="请输入验证码"
                    android:inputType="number"
                    android:maxLength="4"
                    android:paddingLeft="@dimen/thirty"
                    android:paddingRight="@dimen/ten"
                    android:singleLine="true"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grayz"
                    android:textSize="@dimen/text_thirteen" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/text_twelve"
                    android:src="@mipmap/icon_person" />


            </RelativeLayout>

            <TextView
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/gray" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/fortyf"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="@dimen/ten"
                android:layout_weight="4"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/getcode_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="获取验证码"
                    android:textColor="@color/greens"
                    android:textSize="@dimen/text_thirteen" />


            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/forty"
            android:layout_marginRight="@dimen/forty"
            android:background="@color/gray" />

    </LinearLayout>

    <Button
        android:id="@+id/sure_btn"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/forty"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/fifity"
        android:layout_marginRight="@dimen/fifity"
        android:layout_marginBottom="@dimen/thirty"
        android:background="@drawable/green_background"
        android:enabled="false"
        android:text="确认修改"
        android:textColor="@color/white"
        android:textSize="@dimen/text_thirteen" />

</RelativeLayout>